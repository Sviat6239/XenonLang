# If-Else with Const
# Checks if a value exceeds a constant threshold.

# Declares a constant 'threshold' of type int.
const threshold: int = 100;
# Declares a mutable variable 'value' initialized to 150.
var value: int = 150;
# Checks if 'value' exceeds 'threshold'.
if (value > threshold) {
    # Prints if true.
    print("Value exceeds threshold");
} else {
    # Prints if false.
    print("Value within threshold");
}